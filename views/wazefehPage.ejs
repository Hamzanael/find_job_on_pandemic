<section class="get-in-touch">
    <h1 class="title"><%= work.JobName %> </h1>
    <form class="contact-form row" action="/" method="GET">
        <div class="form-field col-lg-6 col-sm-5">
            <input id="JobName" class="input-text js-input" type="text" name="JobName" disabled value="<%= work.JobName %> ">
            <label class="label" for="JobName">اسم الوظيفه</label>
        </div>
        <div class="form-field col-lg-6 col-sm-5">
            <input id="place" class="input-text js-input" type="text" name="place" value="<%= work.place %> " disabled>
            <label class="label" for="place"> مكان الوظيفه</label>
        </div>
        <div class="form-field col-lg-6 col-sm-5">
            <input id="experiance" class="input-text js-input" type="text"
                name="experiance" value="<%= work.experiance %>" disabled>
            <label class="label" for="experiance">الخبرة المطلوبة</label>
        </div>
        <div class="form-field col-lg-6 col-sm-5">
            <input id="hours" class="input-text js-input" type="number" name="hours" value="<%= work.hours %>" disabled >
            <label class="label" for="hours">عدد ساعات العمل</label>
        </div>
        <div class="form-field col-lg-6 col-sm-5">
            <input id="salary" class="input-text js-input" type="number" name="salary" value="<%= work.salary %>" disabled>
            <label class="label" for="salary">الراتب اليومي</label>
        </div>
        <div class="form-field col-lg-6 col-sm-5">
            <input id="study" class="input-text js-input" type="text" name="study"
                value="<%= work.study %> "disabled>
            <label class="label" for="study">التخصص الدراسي</label>
        </div>
        <div class="form-field col-lg-6 col-sm-5">
          <a href="tel:<%= work.phone %>">  <input id="phone" class="input-text js-input" type="text" name="phone"  value="<%= work.phone %> "></a>
            <label class="label" for="phone">رقم الهاتف</label>
        </div>
        <div class="form-field col-lg-6 col-sm-5">
            <input id="mail" class="input-text js-input" type="number" name="mail"
                 value="<%= work.mail %> "disabled>
            <label class="label" for="mail">البريد الالكتروني</label>
        </div>
        <div class="form-field col-lg-12 col-sm-9">
            <input id="discription" class="input-text js-input" type="text" name="discription"
               value="<%= work.discription %>" disabled>
            <label class="label" for="discription">شرح عن الوظيفه</label>
        </div>
        
        <div class="form-field col-lg-12 ">
            <input class="submit-btn" type="submit" value="عوده للصفحه الرئيسيه">
        </div>
    </form>
</section>



